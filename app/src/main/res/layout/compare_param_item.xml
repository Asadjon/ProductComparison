<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="parameter"
            type="com.cyberpantera.productcomparison.models.ParameterRow" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:showIn="@layout/fragment_compare">

        <TextView
            android:layout_weight="1"
            android:text="@{parameter.name}"
            style="@style/compare_param.name" />

        <TextView
            android:text="@{parameter.products[0].values[0]}"
            style="@style/compare_param.value"/>

        <TextView
            android:text="@{parameter.products[0].values[1]}"
            style="@style/compare_param.value"/>

        <TextView
            android:text="@{parameter.products[1].values[0]}"
            style="@style/compare_param.value"/>

        <TextView
            android:text="@{parameter.products[1].values[1]}"
            style="@style/compare_param.value" />

    </LinearLayout>

</layout>