<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MainFragment">

    <fragment
        android:id="@+id/MainFragment"
        android:name="com.cyberpantera.productcomparison.fragments.main.MainFragment"
        android:label="@string/main_fragment_label"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_MainFragment_to_SelectModelFragment"
            app:destination="@id/SelectModelFragment" />
    </fragment>
    <fragment
        android:id="@+id/SelectModelFragment"
        android:name="com.cyberpantera.productcomparison.fragments.select_model.SelectModelFragment"
        android:label="@string/fragment_select_model"
        tools:layout="@layout/fragment_select_model" >
        <action
            android:id="@+id/action_SelectModelFragment_to_MainFragment"
            app:destination="@id/MainFragment" />
    </fragment>

</navigation>