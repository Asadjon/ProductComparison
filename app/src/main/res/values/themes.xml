<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.ProductComparison" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <!-- Other colors -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ProductComparison" parent="Base.Theme.ProductComparison" />

    <style name="Theme.ProductComparison.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ProductComparison.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ProductComparison.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Compare_Param.Name" parent="Theme.AppCompat.DayNight" >
        <item name="android:textColor">@color/text2</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="Compare_Param.Value" parent="Compare_Param.Name" >
        <item name="android:textColor">@color/text</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="maxLines">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
    </style>

    <style name="Compare_Param.Header" parent="Compare_Param.Name" />

    <style name="SelectModel" parent="Base.Theme.ProductComparison" />

    <style name="SelectModel.NumberPicker" >
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SelectModel.ProductName" >
        <item name="android:textColor">@color/text</item>
    </style>

</resources>